<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout_log_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

      <include
          android:id="@+id/toolbar"
          layout="@layout/tool_bar"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/saerchbox_log_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout_log_ride">


        <EditText
            android:id="@+id/edittext_searchbox_log_ride"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/search_box_design"
            android:hint="Search"
            android:maxLines="6"
            android:padding="8dp"
            android:paddingTop="8dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <ImageButton
            android:id="@+id/button_searchbox_log_ride"
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_action_search"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"


            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/log_ride_recylerView"
        android:layout_width="match_parent"
        android:layout_height="460dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saerchbox_log_ride">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_log_ride"
        android:src="@drawable/ic_action_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="16dp"
        app:fabSize="normal"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        />

</android.support.constraint.ConstraintLayout>