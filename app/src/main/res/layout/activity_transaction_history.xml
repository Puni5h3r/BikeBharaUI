<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.TransactionHistoryActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout_transaction_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_transaction_history"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:navigationIcon="?attr/homeAsUpIndicator"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/searchbox_transaction_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout_transaction_history">

        <ImageButton
            android:id="@+id/button_searchbox_transaction_history"
            android:layout_width="44dp"
            android:layout_height="49dp"
            android:layout_gravity="bottom"
            android:background="@drawable/baseline_search_black_18dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"

            />

        <EditText
            android:id="@+id/edittext_searchbox_transaction_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/search_box_design"
            android:hint="Search"
            android:maxLines="6"
            android:padding="8dp"
            android:textColor="@color/black" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/transaction_history_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbox_transaction_history">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>